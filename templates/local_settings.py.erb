<% if @database_engine == 'mysql' -%>
DATABASES = {
    'default': {
        'ENGINE': 'django.db.backends.mysql',
        'NAME': '<%= @database_name %>',
        'USER': '<%= @database_user %>',
        'PASSWORD': '<%= @database_password %>',
        'HOST': '<%= @database_host %>',
        'PORT': '<%= @database_port %>',
    }
}
<% elsif @database_engine == 'postgresql' or @database_engine == 'postgresql_psycopg2' -%>
DATABASES = {
    'default': {
        'ENGINE': 'django.db.backends.postgresql_psycopg2',
        'NAME': '<%= @database_name %>',
        'USER': '<%= @database_user %>',
        'PASSWORD': '<%= @database_password %>',
        'HOST': '<%= @database_host %>',
        'PORT': '<%= @database_port %>',
    }
}
<% else -%>
DATABASES = {
    'default': {
        'ENGINE': 'django.db.backends.sqlite3',
        'NAME': '<%= @root_dir %>/storage/<%= @database_name %>',
    }
}
